{
    "name" : "PartnerOrder",
    "delimiters" : {"segment" : "~", "field" : "*", "component" : ":", "repetition" : "^"},
    "preserveEmptyFields": true,
    "segments" : [ 
        {
            "code": "HDR",
            "tag" : "header",
            "fields" : [{"tag" : "orderId"}, {"tag" : "date"}]
        },
        {
            "code": "ORG",
            "tag" : "organization",
            "fields" : [
                {"tag" : "partnerCode"}, 
                {"tag" : "name"}, 
                {"tag" : "address", "components" : [{"tag" : "streetAddress"}, {"tag" : "city"}, {"tag" : "country"}]}, 
                {"tag" : "contact"}]
        },
        {
            "code": "ITM",
            "tag" : "items",
            "maxOccurances" : -1,
            "fields" : [
                {"tag" : "item"}, 
                {"tag" : "quantity", "dataType" : "int"}, 
                {"tag" : "comment", "dataType" : "composite", "components" : [{"tag" : "author"}, {"tag" : "text"}]}]
        }
    ]
}